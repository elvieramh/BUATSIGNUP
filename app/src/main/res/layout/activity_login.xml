<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b1ebd0"
    android:orientation="vertical"
    tools:context=".LoginActivity">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:srcCompat="@drawable/kukuliner_logo" />

    <EditText
        android:id="@+id/usernameEdit"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="#B3ffffff"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/passwordEdit"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/usernameEdit"
        android:layout_alignStart="@+id/usernameEdit"
        android:layout_below="@+id/usernameEdit"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="#B3ffffff"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/tmblDaftar"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tmblMasuk"
        android:layout_alignBottom="@+id/tmblMasuk"
        android:layout_alignLeft="@+id/passwordEdit"
        android:layout_alignStart="@+id/passwordEdit"
        android:layout_gravity="left"
        android:background="#B3aeaeae"
        android:onClick="tmblDaftar"
        android:text="Daftar"
        android:textColor="#4d4d4d" />

    <Button
        android:id="@+id/tmblMasuk"
        android:layout_marginTop="50dp"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/passwordEdit"
        android:layout_alignRight="@+id/passwordEdit"
        android:layout_alignTop="@+id/passwordEdit"
        android:layout_gravity="right"
        android:background="#B3aeaeae"
        android:onClick="tmblMasuk"
        android:text="Masuk"
        android:textColor="#4d4d4d" />

    <Button
        android:id="@+id/tmblLupaPass"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tmblMasuk"
        android:layout_alignStart="@+id/tmblMasuk"
        android:layout_below="@+id/tmblMasuk"
        android:layout_gravity="right"
        android:layout_marginTop="28dp"
        android:background="#B3aeaeae"
        android:onClick="tmblLupaPass"
        android:text="Lupa Password"
        android:textColor="#4d4d4d" />
</RelativeLayout>